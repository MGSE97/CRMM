@model CRMM.Models.OrderModel

@{
    ViewData["Title"] = "Nová objednávka";
    Layout = "_Layout";
    ViewData["Path"] = new Dictionary<string, string>() {
        { "CRMM", Url.Action("Index", "Home") },
        { "Objednávky", Url.Action("List") },
        { "Objednávka "+Model.Id, "" }
    };
}

<h2>Objednávka @Model.Name</h2>
<hr />
<div class="row">
    <div class="col-md-4">
        @if (Model.Validating)
        {
            <h6 class="text-danger text-center" data-toggle="tooltip" data-placement="bottom" title="Objednávka čeká na schválení dodavatelem!">Objednávka čeká na schválení!</h6>
        }
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" class="form-control" />
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Type" class="control-label"></label>
                <input asp-for="Type" class="form-control" />
                <span asp-validation-for="Type" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LocationId" class="control-label"></label>
                <select asp-items="Model.Locations" asp-for="LocationId" class="form-control"></select>
                <span asp-validation-for="LocationId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Uložit" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="List">Zpět</a>
</div>

