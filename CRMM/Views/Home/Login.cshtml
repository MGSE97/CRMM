@model object

@{
    ViewBag.Title = "Přihlášení";
    Layout = "";
}

<div class="login-panel panel panel-default">
    <div class="panel-heading">
        <h3 class="panel-title">Přihlášení</h3>
    </div>
    <div class="panel-body">
        @using (var form = Html.BeginForm("Login", "Home", FormMethod.Post))
        {
            <fieldset>
                <div class="form-group">
                    <input class="form-control" placeholder="E-mail" name="email" type="email" autofocus="">
                </div>
                <div class="form-group">
                    <input class="form-control" placeholder="Heslo" name="password" type="password" value="">
                </div>
                <!-- Change this to a button or input when using this as a form -->
                <button type="submit" class="btn btn-sm btn-success">Přihlásit</button>
            </fieldset>
        }
    </div>
</div>